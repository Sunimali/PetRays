<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradianblule"
    tools:context=".FirstActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="304dp"
        android:layout_marginBottom="114dp"
        app:layout_constraintBottom_toTopOf="@+id/signuplable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <Button
        android:id="@+id/signInbutton"
        android:layout_width="218dp"
        android:layout_height="55dp"
        android:layout_marginBottom="50dp"
        android:text="Sign In"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:textAllCaps="?android:attr/windowOverscan" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="111dp"
        android:layout_height="37dp"
        android:layout_marginBottom="102dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="24dp"
        android:text="Don't have an account?"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/signuplable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInbutton" />

    <TextView
        android:id="@+id/signuplable"
        android:layout_width="111dp"
        android:layout_height="32dp"
        android:layout_marginBottom="139dp"
        android:layout_marginEnd="153dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="28dp"
        android:text="@string/signup"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</android.support.constraint.ConstraintLayout>